{
  "name": "jsninja-creation-demo",
  "version": "1.0.0",
  "description": "Demo project for stream",
  "main": "index.js",
  "author": "Illya Klymov <illya@javascript.ninja>",
  "license": "MIT",
  "scripts": {
    "start": "rimraf ./dist && babel -d ./dist ./src -s && node dist/main.js",
    "dev": "node dev.js",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged",
    "test": "nyc -r html ava"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-register": "^6.23.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-config-prettier": "^1.4.1",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.3.1",
    "nyc": "^10.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "^0.21.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-bitwise": 0,
      "no-underscore-dangle": 0,
      "no-param-reassign": 0,
      "consistent-return": 0
    }
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-env": "^1.1.11",
    "mz": "^2.6.0",
    "rimraf": "^2.6.1"
  },
  "ava": {
    "files": [
      "test/**/*.js",
      "!**/not-this-file.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
